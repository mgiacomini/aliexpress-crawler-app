<%- model_class = ProductType -%>
<div class="page-header">
  <h1><%= "#{@product_type.product.name} - #{@product_type.name}" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:wordpress) %>:</strong></dt>
  <dd><%= @product_type.wordpress.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aliexpress_link) %>:</strong></dt>
  <dd><%= @product_type.aliexpress_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_1) %>:</strong></dt>
  <dd><%= @product_type.option_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_2) %>:</strong></dt>
  <dd><%= @product_type.option_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_3) %>:</strong></dt>
  <dd><%= @product_type.option_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping) %>:</strong></dt>
  <dd><%= @product_type.shipping %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              product_types_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_type_path(@product_type), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_type_path(@product_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
