<%= simple_form_for @crawler, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :wordpress %>
  <%= error_span(@crawler[:wordpress_id]) %>
  <%= f.association :aliexpress %>
  <%= error_span(@crawler[:aliexpress_id]) %>
  <%= f.input :enabled, as: :boolean %>
  <%= error_span(@crawler[:enabled]) %>
  <%= f.collection_radio_buttons :schedule, [['ten_minutes', '10 Minutes'] ,
                                            ['hourly', 'Hourly'],
                                            ['daily', 'Daily']
                                            ], :first, :last %>
  <br>
  <%= error_span(@crawler[:schedule]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                crawlers_path, :class => 'btn btn-default' %>
<% end %>
